# ðŸ¥· GHOST DEPLOYMENT ENVIRONMENT - TronLive
# Copy this to .env for untraceable hosting

APP_NAME="TronLive"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com

# GHOST LOGGING - NO TRACES
LOG_CHANNEL=null
LOG_LEVEL=emergency
LOG_STACK=null
LOG_DEPRECATIONS_CHANNEL=null

# GHOST SESSION - FILE BASED (NO DATABASE TRACKING)
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# GHOST CACHE - LOCAL ONLY
CACHE_STORE=file
CACHE_PREFIX=ghost_app

# MINIMAL QUEUE (NO EXTERNAL SERVICES)
QUEUE_CONNECTION=sync
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# DATABASE (USE ENCRYPTED CONNECTION)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_username
DB_PASSWORD=your_password

# MAIL (USE ANONYMOUS PROVIDERS OR DISABLE)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# TRON CONFIGURATION (ROTATE API KEY FREQUENTLY)
TRONGRID_API_KEY=your_new_ghost_api_key
TRONGRID_BASE_URL=https://api.trongrid.io

# ADMIN WALLET (GENERATED IN TAILS OS ONLY)
ADMIN_WALLET_ADDRESS=TL8548WGPxkUbneCLJwg1UgQvNeNMe7E96
ADMIN_WALLET_PRIVATE_KEY=BFD03301FB14BE68C6C646E10D67E45878935F8A4ABD2F618684A7745C42257E

# SECURITY SETTINGS (MAXIMUM PARANOIA)
GOOGLE_2FA_ENABLED=true
